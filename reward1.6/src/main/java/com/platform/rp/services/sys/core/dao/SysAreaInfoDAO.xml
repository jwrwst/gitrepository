<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.platform.rp.services.sys.core.dao.SysAreaInfoDAO">
    
    <resultMap type="com.platform.rp.services.sys.core.dao.entity.SysAreaInfoEntity" id="sysAreaInfoEntityMap">
        <id column="id" property="id" />
		<result column="name" property="name" />
		<result column="code" property="code" />
		<result column="parent_code" property="parentCode" />
		<result column="spell" property="spell" />
    </resultMap>
    
	<select id="getSysAreaInfoList" resultMap="sysAreaInfoEntityMap" parameterType="string">
		select * from sys_area_info sys 
		<where>
		    status = 1
		    <if test="parentCode!=null">and parent_code = #{parentCode}</if> 
		</where>
		order by id
	</select>

</mapper>