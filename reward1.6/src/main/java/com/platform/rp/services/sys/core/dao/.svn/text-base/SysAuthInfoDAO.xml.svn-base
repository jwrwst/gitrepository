<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.platform.rp.services.sys.core.dao.SysAuthInfoDAO">
    
    <resultMap type="com.platform.rp.services.sys.inner.vo.SysAuthInfoVo" id="sysAuthInfoVoMap">
        <id column="sys_auth_id" property="sysAuthId" />
		<result column="auth_name" property="authName" />
		<result column="auth_code" property="authCode" />
		<result column="parent_id" property="parentId" />
		<result column="auth_type" property="authType" />
		<result column="auth_url" property="authUrl" />
		<result column="create_time" property="createTime" />
		<result column="upd_time" property="updTime" />
		<result column="create_user_id" property="createUserId" />
		<result column="upd_user_id" property="updUserId" />
		<result column="sort" property="sort" />
    </resultMap>
    
	<select id="getSysAuthInfoList" resultMap="sysAuthInfoVoMap">
		select * from sys_auth_info sys 
		order by sys.parent_Id,sys.sort
	</select>

</mapper>