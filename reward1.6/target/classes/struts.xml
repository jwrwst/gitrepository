<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

    <constant name="struts.convention.result.path" value="/views/" />
<!-- struts.proerties -->
    <constant name="struts.enable.DynamicMethodInvocation" value="true" />
    <constant name="struts.devMode" value="true" />
    <constant name="struts.objectFactory" value="spring" />
    <constant name="struts.devMode" value="false"></constant>
    <constant name="struts.action.excludePattern" value="/services/.*,/rs/.*"/>
    <constant name="struts.action.extension" value="xhtml"></constant>
    <constant name="struts.freemarker.manager.classname" value="com.platform.rp.services.template.external.common.ex.FreemarkerManagerEx"/>
 
    <package name="default" namespace="/" extends="struts-default">

        <interceptors>
            <interceptor name="directiveInterceptor" class="com.platform.rp.framework.rest.jersey.template.interceptor.DirectiveInterceptor"></interceptor>
        </interceptors>
        
        <global-results>
            <result name="unauthenticatedException">/WEB-INF/error.jsp</result>
            <result name="unauthorizedException">/WEB-INF/error.jsp</result>
            <result name="cftsServiceException">/WEB-INF/error.jsp</result>
        </global-results>        
       
    </package>

</struts>
