<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8">
<meta name="viewport"
	content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no,telephone=no" />
	
<title>众赏</title>
<link href="${basepath}/assets/plugin/mui/dist/css/mui.min.css"
	rel="stylesheet" />
<link href="${basepath}/assets/def/css/tips.css" rel="stylesheet" />
<style>
html,body {
	margin: 0;
	overflow-x: hidden;
}

.mui-bar a.mui-icon,.mui-bar .mui-icon:active {
	color: #EA4F16;
	opacity: 1;
}

.mui-table-view-cell span.mui-badge {
	float: right;
	background: none;
	font-size: 15px;
}

</style>
</head>
<body>
	<header class="mui-bar mui-bar-nav">
		<a class="mui-action-back mui-icon mui-icon-left-nav mui-pull-left"></a>
		<h1 class="mui-title">账户与安全</h1>
	</header>
	<!--页面主结构开始-->
	<div class="mui-content">
		<ul class="mui-table-view">
			<li class="mui-table-view-cell">账号 <span class="mui-badge" name="name"></span></li>
			<li class="mui-table-view-cell"><a class="mui-navigate-right"  id="updatePassword">
					<span class="mui-badge"></span> 修改密码
			</a></li>
			<!-- <li class="mui-table-view-cell"><a class="mui-navigate-right"  id="findPassword">
					<span class="mui-badge"></span> 找回密码
			</a></li> -->
		</ul>
	</div>
		<p class="mui-table-view-cell" style="position:inherit;margin-bottom:-15px;">
			<a style="color: #EA4F16; float:right;" href="#" id="findPassword">找回密码</a>
		</p>
	<div class="mui-content" style="padding-top: 0;">
		<ul class="mui-table-view">
			<li class="mui-table-view-cell"><a class="mui-navigate-right" id="bindMobileLi">
					<span class="mui-badge" name="mobile" id="bindMobile" ></span> 绑定手机
			</a></li>
		</ul>
	</div>
<!-- 
	<div class="tips-reginfo-submit"
		style="position: absolute; left: 10px; bottom: 20px; right: 10px;">
		<button type="button" class="mui-btn mui-btn-warning mui-btn-block">退出登录</button>
	</div> -->
	<!-- 出现遮罩层 -->



</body>
<script src="${basepath}/assets/plugin/require.js"></script>
<script type="text/javascript"
	src="${basepath}/assets/def/js/tips/tips.js"></script>
	
<!--  <script type="text/javascript"
			src="${basepath}/views/template/web/tips/merchants/def/account.js?v=9432424234234384"></script> -->
			
<script type="text/javascript">
	
	var Account = {
			init:function(){
	
				require([ "jquery", "mui", "mui_view", "addr", "common", "ftscroller" ],
						function($$, mui, mui_view, addr, tools) {
	
					var orgCode  = localStorage.getItem("_user_orgCode");
					Account.loadDatas(addr,orgCode);
					Account.initLitenters(addr);
				});
			},
			initLitenters:function(){
				//绑定手机
				mui("body").on('tap', '#bindMobileLi', function() {
					var mobile=$("#bindMobile").text();
					window.localStorage.setItem("mobile",mobile.trim());
					window.location.href = "tips_tenant_bindphone.xhtml";
				});
				//修改密码
				mui("body").on('tap', '#updatePassword', function() {
					var mobile=$("#bindMobile").text();
					window.localStorage.setItem("mobile",mobile.trim());
					window.location.href = "tips_merchants_modifypassword.xhtml";	
				});
				//找回密码
				mui("body").on('tap', '#findPassword', function() {
					var mobile=$("#bindMobile").text();
					window.localStorage.setItem("mobile",mobile.trim());
					//商户账号
					localStorage.setItem("_user_account",Account.account);
					window.location.href = "tips_merchants_refindpsd.xhtml";	
				});
			},
			/**
			 * 页面数据
			 */
			loadDatas:function(addr,orgCode){
				
				var tools = require("common");
				var loading=tools.loading();
				setTimeout(function(){
					//alert(1)
					loading.close();
				}, 500)
				addr.getRegisterMerchantsEntity(
					//JSON.stringify(data),,
					"orgCode="+orgCode,
					function(datas){
						loading.close();
						var status = datas.resultMessage.status;
						if(status == 0){
							var da = datas.resultData.body.result[0];
							if(da.account == null){
								window.location.href = "tips_tenant_auditing.xhtml";	
							}else{
								Account.account = da.account;
								$("span[name='name']").html(da.account);
								$("span[name='mobile']").html(da.account);					
							}
						}
					});
			}
	};
	Account.init();
</script>	
</html>

















